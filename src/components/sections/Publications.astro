---
import { getJsonCV } from "@/utils";

const { publications } = getJsonCV();
---

<section>
	<h2>Publications</h2>
	{
		publications.map(({ name, publisher, releaseDate, url, summary }: any) => (
			<div class="flex flex-col border-b border-gray-100 pb-4 pt-4">
				<div class="flex gap-2 flex-col sm:flex-row">
					<p>
						[ <time class="opacity-85 font-bold">{releaseDate}</time> ]
					</p>
					<h3 class="opacity-80">{name}</h3>
				</div>
				<div class="text-sm opacity-80 pb-2 pt-2">
					<b>Summary:</b> {summary}
				</div>
				<div class="flex justify-between">
					<span class="tracking-widest">Publisher: {publisher}</span>
					<a href={url} target="_blank" rel="noopener noreferrer">
						Link
					</a>
				</div>
			</div>
		))
	}
</section>
